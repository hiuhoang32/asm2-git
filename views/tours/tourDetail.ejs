    <script>
        let pricePerPerson = Number("<%= pricePerPerson %>");
        function handleChangeAvatar() {
            document.getElementById('avatarInput').click();
        }

        function handleFileChange() {
            const avatarInput = document.getElementById('avatarInput');
            if (avatarInput.files.length > 0) {
                document.getElementById('changeAvatarForm').submit();
            }
        }

        const targetNode = document.getElementById('peopleCountEntry');

        const observer = new MutationObserver((mutationsList) => {
            for (let mutation of mutationsList) {
                if (mutation.type === 'childList' || mutation.type === 'characterData') {
                    console.log('Text changed:', targetNode.textContent);

                    const input = document.getElementById('peopleCount');

                    if (input) {
                        input.value = targetNode.textContent;
                    }

                    const display = document.getElementById('peopleDisplay');


                    if (display) {
                        display.innerText = targetNode.textContent + ' Persons';
                    }

                    const totalPriceDisplay = document.getElementById("totalPrice");

                    if (totalPriceDisplay) {
                        const peopleCount = Number(targetNode.textContent);
                        totalPriceDisplay.textContent = `$${pricePerPerson * peopleCount}`;
                    }

                }
            }
        });

        observer.observe(targetNode, { characterData: true, subtree: true, childList: true });
    </script>
