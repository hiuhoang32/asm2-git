        });
        let peopleCount = Number("<%= peopleCount %>");
        let pricePerPerson = Number("<%= pricePerPerson %>");
        let flightPricePerPerson = Number("<%= tourDetails.flightPricePerPerson %>");
        let hotelPricePerPerson = Number("<%= tourDetails.hotelPricePerPerson %>");
        let totalPriceFlight = flightPricePerPerson * peopleCount;
        let totalPriceHotel = hotelPricePerPerson * peopleCount;
        let basePricePerPerson = Number("<%= pricePerPerson %>");
        let baseTotalPrice = basePricePerPerson * peopleCount;
        let tourId = "<%= tour._id %>";

        let tourDetails = {
            flightNumber: "<%= tourDetails.flightNumber %>",
            airline: "<%= tourDetails.airline %>",
            hotel: "<%= tourDetails.hotel %>",
            hotelNumber: "<%= tourDetails.hotelNumber %>",
            flightPricePerPerson: "<%= tourDetails.flightPricePerPerson %>",
            hotelPricePerPerson: "<%= tourDetails.hotelPricePerPerson %>"
        }

        function handleChangeAvatar() {
            document.getElementById('avatarInput').click();
        }

        function handleFileChange() {
            const avatarInput = document.getElementById('avatarInput');
            if (avatarInput.files.length > 0) {
                document.getElementById('changeAvatarForm').submit();
            }
        };


        document.addEventListener("DOMContentLoaded", function() {
            let TotalPriceDisplay = totalPriceFlight + totalPriceHotel + baseTotalPrice;

            
            document.getElementById('totalPrice').innerHTML = `<strong>$${(TotalPriceDisplay)}</strong>$`;;
        });


        const targetNode = document.getElementById('peopleCount');

        const observer = new MutationObserver((mutationsList) => {
            for (let mutation of mutationsList) {
                if (mutation.type === 'childList' || mutation.type === 'characterData') {

                    console.log(targetNode.textContent);

                    peopleCount = Number(targetNode.textContent);

                    const display = document.getElementById('peopleDisplay');


                    if (display) {
                        display.innerText = peopleCount + ' Persons';
                    }

                    const input = document.getElementById("peopleCountInput");

                    if (input) {
                        input.value = peopleCount;
                    }

                    // const input2 = document.getElementById("peopleCountInput2");

                    // if (input2) {
                    //     input2.value = peopleCount;
                    // }

                    const personFlightDisplay = document.getElementById('priceFlightPersonDisplay');

                    if (personFlightDisplay) {
                        personFlightDisplay.innerHTML = `Quantity: <strong>${peopleCount}</strong> Persons`;
                    }
                    const personHotelDisplay = document.getElementById('priceHotelPersonDisplay');

                    if (personHotelDisplay) {
                        personHotelDisplay.innerHTML = `Quantity: <strong>${peopleCount}</strong> Persons`;
                    }
                    const totalPriceFlightDisplay = document.getElementById('priceFlightDisplay');

                    if (totalPriceFlightDisplay) {
                        totalPriceFlight = flightPricePerPerson * peopleCount;
                        totalPriceFlightDisplay.innerHTML = `Total: <strong>$${(totalPriceFlight)}</strong>`;
                    }

                    const totalPriceHotelDisplay = document.getElementById('priceHotelDisplay');

                    if (totalPriceHotelDisplay) {
                        totalPriceHotel = hotelPricePerPerson * peopleCount;
                        totalPriceHotelDisplay.innerHTML = `Total: <strong>$${(totalPriceHotel)}</strong>`;
                    }

                    const totalPriceDisplay = document.getElementById('totalPrice');

                    if (totalPriceDisplay) {
                        baseTotalPrice = basePricePerPerson * peopleCount;
                        finalTotalPrice = totalPriceFlight + totalPriceHotel + baseTotalPrice;
                        totalPriceDisplay.innerHTML = `<strong>$${(finalTotalPrice)}</strong>$`;
                    }
                }
            }
        });
        observer.observe(targetNode, { characterData: true, subtree: true, childList: true });


    </script>
