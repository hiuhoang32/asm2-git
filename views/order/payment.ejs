										<h4 class="title">Included</h4>
										<ul class="expect-list">
                                            <% tour.included.filter(item => Boolean(item)).forEach(item => { %>
                                                <li class="list"><%= item %></li>
                                            <% }) %>
										</ul>
									</div>
									<div class="divider"></div>
									<div class="includ-exclude-point">
										<h4 class="title">Exclude</h4>
										<ul class="expect-list">
                                            <% tour.excluded.filter(item => Boolean(item)).forEach(item => { %>
                                                <li class="list"><%= item %></li>
                                            <% }) %>
										</ul>
									</div>
								</div>
                                <div class="tour-include-exclude m-0 mb-30 radius-6">
									<div class="includ-exclude-point" style="width: 50%;">
										<h4 class="title"><i class="ri-flight-takeoff-fill"></i> Flight Detail</h4>
										<ul class="expect-list">
                                            <li class="list">Avaliable flight: <strong><%= tourDetails.flightNumber %></strong></li>
                                            <li class="list">Airline: <strong><%= tourDetails.airline %></strong></li>
                                            <li class="list">Ticket price (currently): <strong>$<%= tourDetails.flightPricePerPerson %></strong></li>
                                            <li class="list" id="priceFlightPersonDisplay">Quantity: <strong><%= peopleCount %></strong> Persons</li>
                                            <li class="list" id="priceFlightDisplay">Total: <strong>$<%= tourDetails.flightPricePerPerson * peopleCount %></strong></li>
										</ul>
									</div>
									<div class="divider"></div>
									<div class="includ-exclude-point" style="width: 50%;">
										<h4 class="title"><i class="ri-map-pin-line"></i> Hotel Detail</h4>
										<ul class="expect-list" >
