<!DOCTYPE html>
<html>
<head>
    <title>Add Tour</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Add Tour</h1>
        <a href="/admin/dashboard" class="btn btn-primary">Admin Dashboard</a>
        <form action="/admin/add-tour" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="location">Location:</label>
                <input type="text" class="form-control" id="location" name="location" required>
            </div>
            <div class="form-group">
                <label for="duration">Duration:</label>
                <input type="text" class="form-control" id="duration" name="duration" required>
            </div>
            <div class="form-group">
                <label for="peopleCount">Recommended People Count:</label>
                <input type="number" class="form-control" id="peopleCount" name="peopleCount" required>
            </div>
            <div class="form-group">
                <label for="price">Base Price:</label>
                <input type="number" class="form-control" id="price" name="price" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea class="form-control" id="description" name="description" required></textarea>
            </div>
            <div class="form-group">
                <label for="included">Included (separate with new lines):</label>
                <textarea class="form-control" id="included" name="included" required></textarea>
            </div>
            <div class="form-group">
                <label for="excluded">Excluded (separate with new lines):</label>
                <textarea class="form-control" id="excluded" name="excluded" required></textarea>
            </div>
            <div id="tourPlan">
                <h3>Tour Plan</h3>
                <button type="button" class="btn btn-primary" onclick="addDay()">Add Day</button>
            </div>
            <div class="form-group">
                <label for="images">Images:</label>
                <input type="file" class="form-control" id="images" name="images" multiple required>
            </div>
            <button type="submit" class="btn btn-primary">Add Tour</button>
        </form>
    </div>

    <script>
        function addDay() {
            const tourPlanDiv = document.getElementById('tourPlan');
            const dayCount = tourPlanDiv.getElementsByClassName('day').length + 1;

            const dayDiv = document.createElement('div');
            dayDiv.className = 'day';

            const dayTitleLabel = document.createElement('label');
            dayTitleLabel.textContent = `Day ${dayCount} Title:`;
            dayDiv.appendChild(dayTitleLabel);

            const dayTitleInput = document.createElement('input');
            dayTitleInput.type = 'text';
            dayTitleInput.className = 'form-control';
            dayTitleInput.name = `dayTitle${dayCount}`;
            dayTitleInput.required = true;
            dayDiv.appendChild(dayTitleInput);

            const dayDescLabel = document.createElement('label');
            dayDescLabel.textContent = `Day ${dayCount} Description:`;
            dayDiv.appendChild(dayDescLabel);

            const dayDescTextarea = document.createElement('textarea');
            dayDescTextarea.className = 'form-control';
            dayDescTextarea.name = `dayDescription${dayCount}`;
            dayDescTextarea.required = true;
            dayDiv.appendChild(dayDescTextarea);

            tourPlanDiv.appendChild(dayDiv);
        }
    </script>
</body>
</html>
